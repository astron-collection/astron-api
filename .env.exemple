# 🌐 General
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# 🛠️ API
API_BASE_URL=http://localhost:3000/api

# 🔐 Authentication (Discord OAuth2)
CLIENT_ID=your_discord_client_id
CLIENT_SECRET=your_discord_client_secret
REDIRECT_URI=http://localhost:3000/api/auth/callback
SECRET=your_session_secret_here

# 📦 Database
DATABASE_URL=postgres://user:password@localhost:5432/astron

# 📤 Mail (Optional if using email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_FROM="Astron Support <support@astron-collection.com>"

# 📊 Metrics / Stats (optional for advanced use)
GLOBAL_STATS_JSON_PATH=./data/stats.json

# 🧪 Development-only
LOG_LEVEL=debug
ENABLE_DEV_TOOLS=true